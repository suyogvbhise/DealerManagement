@model DMS.Models.PurchaseDeliveryNote

@{
    ViewData["Title"] = "Create Purchase Delivery Note";
    var inventory = ViewBag.Inventory as DMS.Models.Inventory;
}

<h2>Purchase Delivery Note</h2>

<form asp-action="Create">
    <input type="hidden" asp-for="InventoryId" />

    <div class="form-group">
        <label>Registration Number</label>
        <input class="form-control" value="@inventory.RegistrationNumber" readonly />
    </div>

    <div class="form-group">
        <label>Fuel Type</label>
        <input class="form-control" value="@inventory.FuelType?.Name ?? " N /A"" readonly />
    </div>

    <div class="form-group">
        <label>Purchase Location</label>
        <input class="form-control" value="@inventory.PurchaseLocations?.Name ?? " N /A"" readonly />
    </div>

    <div class="form-group">
        <label>Vehicle Ownership</label>
        <input class="form-control" value="@inventory.VehicleOwnership" readonly />
    </div>

    <hr />

    <h4>Buyer Details</h4>

    <div class="form-group">
        <label asp-for="BuyerName"></label>
        <input asp-for="BuyerName" class="form-control" />
        <span asp-validation-for="BuyerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactNumber"></label>
        <input asp-for="ContactNumber" class="form-control" />
        <span asp-validation-for="ContactNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save PDN</button>
    <a asp-action="Index" asp-controller="Inventory" class="btn btn-secondary">Cancel</a>
</form>
