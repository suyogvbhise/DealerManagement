@model IEnumerable<DMS.Models.PurchaseLocation>

@{
    ViewData["Title"] = "Purchase Locations";
}

<h2>Purchase Locations</h2>
<a asp-action="Create" class="btn btn-primary">Add New Location</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var location in Model)
        {
            <tr>
                <td>@location.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@location.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@location.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-controller="Inventory" asp-action="Create" class="btn btn-secondary">Back to Add New Car</a>
</div>