@model DMS.Models.Inventory

@{
    ViewData["Title"] = "Edit Inventory";
}

<h2>Edit Vehicle Details</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="RegistrationNumber"></label>
        <input asp-for="RegistrationNumber" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="RegistrationDate"></label>
        <input asp-for="RegistrationDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="VehicleOwnership"></label>
        <select asp-for="VehicleOwnership" class="form-control">
            <option value="1st Owner">1st Owner</option>
            <option value="2nd Owner">2nd Owner</option>
            <option value="3rd Owner">3rd Owner</option>
            <option value="4th Owner">4th Owner</option>
            <option value="5th Owner">5th Owner</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
