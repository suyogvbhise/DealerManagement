@model DMS.Models.Inventory

@{
    ViewData["Title"] = "Delete Inventory";
}

<h2>Are you sure you want to delete this vehicle?</h2>

<div>
    <p><strong>Registration Number:</strong> @Model.RegistrationNumber</p>
    <p><strong>Registration Date:</strong> @Model.RegistrationDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Vehicle Ownership:</strong> @Model.VehicleOwnership</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
