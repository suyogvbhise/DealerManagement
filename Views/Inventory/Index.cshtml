@model IEnumerable<DMS.Models.Inventory>

@{
    ViewData["Title"] = "Inventory List";
}

<h2 class="mt-3">Inventory List</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Add New Vehicle</a>


@if (!Model.Any())
{
    <div class="alert alert-warning">No inventory records found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Registration Number</th>
                <th>Registration Date</th>
                <th>Vehicle Ownership</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RegistrationNumber</td>
                    <td>@item.RegistrationDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.VehicleOwnership</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏ Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑 Delete</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Create" asp-controller="PurchaseDeliveryNote" asp-route-inventoryId="@item.Id" class="btn btn-primary btn-sm">Create PDN</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
