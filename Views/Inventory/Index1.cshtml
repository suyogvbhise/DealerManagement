@model DMS.Models.Inventory

@{
    ViewData["Title"] = "Add New Vehicle";
}

<h2 class="mt-3">Add New Vehicle</h2>

<div class="card shadow p-4">
    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="RegistrationNumber" class="form-label">Registration Number</label>
            <input asp-for="RegistrationNumber" class="form-control" placeholder="Enter Registration Number" required />
            <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="RegistrationDate" class="form-label">Registration Date</label>
            <input asp-for="RegistrationDate" type="date" class="form-control" required />
            <span asp-validation-for="RegistrationDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="VehicleOwnership" class="form-label">Vehicle Ownership</label>
            <select asp-for="VehicleOwnership" class="form-select">
                <option value="">-- Select Ownership --</option>
                <option value="1st Owner">1st Owner</option>
                <option value="2nd Owner">2nd Owner</option>
                <option value="3rd Owner">3rd Owner</option>
                <option value="4th Owner">4th Owner</option>
                <option value="5th Owner">5th Owner</option>
            </select>
            <span asp-validation-for="VehicleOwnership" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">🔙 Back to List</a>
            <button type="submit" class="btn btn-primary">✅ Save Vehicle</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
